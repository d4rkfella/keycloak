{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    ":dependencyDashboard",
    ":automergeBranch",
    ":disableRateLimiting",
    ":timezone(Europe/Sofia)",
    ":semanticCommits"
  ],
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "suppressNotifications": ["prEditedNotification", "prIgnoreNotification"],
  "packageRules": [
    {
      "addLabels": ["renovate/container", "type/major"],
      "additionalBranchPrefix": "{{parentDir}}-",
      "commitMessageExtra": " ( {{currentVersion}} â†’ {{newVersion}} )",
      "commitMessagePrefix": "feat({{parentDir}})!: ",
      "commitMessageTopic": "{{depName}}",
      "labels": ["{{parentDir}}"],
      "matchDatasources": ["docker"],
      "matchFileNames": ["Dockerfile"],
      "matchUpdateTypes": ["major"]
    },
    {
      "addLabels": ["renovate/container", "type/minor"],
      "additionalBranchPrefix": "{{parentDir}}-",
      "commitMessageExtra": "( {{currentVersion}} â†’ {{newVersion}} )",
      "commitMessageTopic": "{{depName}}",
      "labels": ["{{parentDir}}"],
      "matchDatasources": ["docker"],
      "matchFileNames": ["Dockerfile"],
      "matchUpdateTypes": ["minor"],
      "semanticCommitScope": "{{parentDir}}",
      "semanticCommitType": "feat"
    },
    {
      "addLabels": ["renovate/container", "type/patch"],
      "additionalBranchPrefix": "{{parentDir}}-",
      "commitMessageExtra": "( {{currentVersion}} â†’ {{newVersion}} )",
      "commitMessageTopic": "{{depName}}",
      "labels": ["{{parentDir}}"],
      "matchDatasources": ["docker"],
      "matchFileNames": ["Dockerfile"],
      "matchUpdateTypes": ["patch"],
      "semanticCommitScope": "{{parentDir}}",
      "semanticCommitType": "fix"
    },
    {
      "matchPackageNames": ["quay.io/keycloak/keycloak"],
      "matchDatasources": ["docker"],
      "sourceUrl": "https://github.com/keycloak/keycloak",
      "changelogUrl": "https://www.keycloak.org/docs/latest/release_notes/index.html"
    },
    {
      "matchUpdateTypes": ["major"],
      "labels": ["type/major"]
    },
    {
      "matchUpdateTypes": ["minor"],
      "labels": ["type/minor"]
    },
    {
      "matchUpdateTypes": ["patch"],
      "labels": ["type/patch"]
    },
    {
      "matchUpdateTypes": ["digest"],
      "labels": ["type/digest"]
    },
    {
      "matchDatasources": ["docker"],
      "addLabels": ["renovate/container"]
    },
    {
      "matchDatasources": ["github-releases", "github-tags"],
      "addLabels": ["renovate/github-release"]
    },
    {
      "matchManagers": ["github-actions"],
      "addLabels": ["renovate/github-action"]
    }
  ]
}
